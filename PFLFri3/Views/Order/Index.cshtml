@model PFLFri3.Models.OrderData

@{
    ViewData["Title"] = "Order Confirmation";
}

@if (Model != null)
{
    <div class="container-fluid">
        <h1>Order Success</h1>
        <div class="row">
            <div class="col-md-12">
                <div>
                    <h3>Confirmation Number: @Html.DisplayFor(modelItem => Model.orderNumber)</h3>
                    <p>Total: $@Html.DisplayFor(modelItem => Model.orderPrices.orderTotalPrice)</p>
                </div>
            </div>
        </div>
    </div>
}